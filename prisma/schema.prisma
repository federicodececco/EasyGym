generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  name         String
  surname      String
  email        String        @unique
  height       String
  weight       String
  imageUrl     String        @default("")
  trainer      Trainer?
  workoutPlans WorkoutPlan[]
  masses       Mass[]

  created_at DateTime @default(now())
}

model Trainer {
  id         Int      @id @default(autoincrement())
  role       String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId     Int      @unique
  created_at DateTime @default(now())
}

model Exercise {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  series       Int
  repetition   Int
  restPeriod   Int
  typeOfWeight String
  weight       Int
  workoutPlans WorkoutPlan[]
  created_at   DateTime      @default(now())
}

model WorkoutPlan {
  id             Int        @id @default(autoincrement())
  name           String
  startData      String
  expirationData String
  user           User       @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId         Int
  exercises      Exercise[]
  created_at     DateTime   @default(now())
}

model Mass {
  id         Int      @id @default(autoincrement())
  date       DateTime @default(now())
  percent    Int
  weight     Int
  isLeanMass Boolean
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId     Int
}
